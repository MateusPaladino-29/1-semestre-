@model Jogador

@{
    ViewData["Title"] = "Edit";
}

<link rel="stylesheet" href="~/css/jogadores.css">


<!-- MAIN -->
<main>

    <section class="container-grid cadastro-equipes">

        @if (ViewBag.UserName == null)
        {
            <a class="navbar-brand" asp-area="" asp-controller="Login" asp-action="Index">Login</a>
        }

        else
        {

            <form class="frm-cad-equipe" method="post" action="@Url.Action("Atualizar")" enctype="multipart/form-data">
                <div class="cadequipe-titulo">
                    <h1>Edição de Jogadores</h1>
                    <hr>
                </div>

                <input type="hidden" value="@ViewBag.Jogador.IdJogador" name="IdJogador">

                <input class="campo-entrada" type="text" id="nome-jogador" placeholder="Digite o nome do Jogador:"
                    name="Nome" value="@ViewBag.Jogador.Nome">
                <input class="campo-entrada" type="email" id="email-jogador" placeholder="Digite o Email do Jogador:"
                    name="Email" value="@ViewBag.Jogador.Email">
                <input class="campo-entrada" type="password" id="senha" placeholder="Digite a Senha:" name="Senha"
                    value="@ViewBag.Jogador.Senha">

                <select class="campo-entrada" name="IdEquipe" id="IdEquipe">
                    <option value="0">Selecione: </option>
                    @foreach (Equipe item in ViewBag.Equipe)
                    {
                        @if (item.IdEquipe == ViewBag.Jogador.IdEquipe)
                        {
                            <option value="@item.IdEquipe" selected>@item.Nome</option>
                        }
                        else
                        {
                            <option value="@item.IdEquipe">@item.Nome</option>
                        }
                    }
                </select>


                <button type="submit">Atualizar</button>

            </form>
        }
    </section>
</main>










































