@model Equipe

@{
    ViewData["Title"] = "Edit";
}

<link rel="stylesheet" href="~/css/equipes.css">




<!-- MAIN -->
<main>

    <section class="container-grid cadastro-equipes">


        @if (ViewBag.UserName == null)
        {
            <a class="navbar-brand" asp-area="" asp-controller="Login" asp-action="Index">Login</a>
        }

        else
        {

            <form  class="frm-cad-equipe" method="post" action="@Url.Action("Atualizar")" enctype="multipart/form-data">
                <div class="cadequipe-titulo">
                    <h1>Edição de Equipes</h1>
                    <hr>
                </div>

                <input class="campo-entrada" type="hidden" value="@ViewBag.Equipe.IdEquipe" id="idEquipe"
                    placeholder="Digite o Id da sua equipe:" name="IdEquipe">

                <input class="campo-entrada" type="text" placeholder="Digite o nome da sua equipe:" name="Nome"
                    value="@ViewBag.Equipe.Nome" required>
                <label class="foto" for="foto-file">
                    Nenuma imagem selecionada...
                    <input type="file" id="foto-file" valeu="@ViewBag.Equipe.Imagem" name="Imagem">
                </label>

                <button type="Submit">Atualizar</button>

            </form>           
        }

    </section>
</main>




















